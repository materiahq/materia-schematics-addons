{
    "name": "<%= utils.dasherize(packageName) %>",
    "version": "0.1.0",
    "description": "Starter kit to create a Materia Addon",
    "author": "team@getmateria.com",
    "license": "MIT",
    "scripts": {
      "build": "ng build",
      "e2e": "ng e2e",
      "lint": "ng lint",
      "ng": "ng",
      "start": "ng serve",
      "test": "ng test",
      "build:prod": "npm run clean && npm run prebuild && npm run build:client && npm run build:server && npm run postbuild",
      "build:server": "tsc -p ./tsconfig.server.json && ncp ./server/api.json ./dist/server/api.json",
      "build:client": "ng build --prod",
      "prebuild": "node scripts/prebuild.js",
      "postbuild": "node scripts/postbuild.js && ncp README.md ./dist/README.md && ncp LICENSE ./dist/LICENSE",
      "clean": "rimraf dist"
    },
    "peerDependencies": {
      "@materia/server": "1.x.x"
    },
    "devDependencies": {
      "@angular-devkit/build-angular": "~0.900.3",
      "@angular-devkit/build-ng-packagr": "~0.900.3",
      "@angular/animations": "~9.0.6",
      "@angular/cdk": "~9.0.1",
      "@angular/cli": "~9.0.3",
      "@angular/common": "~9.0.6",
      "@angular/compiler": "~9.0.6",
      "@angular/compiler-cli": "~9.0.6",
      "@angular/core": "~9.0.6",
      "@angular/flex-layout": "9.0.0-beta.29",
      "@angular/forms": "~9.0.6",
      "@angular/language-service": "~9.0.6",
      "@angular/material": "~9.0.1",
      "@angular/platform-browser": "~9.0.6",
      "@angular/platform-browser-dynamic": "~9.0.6",
      "@materia/addons": "1.0.0",
      "@materia/interfaces": "1.0.2",
      "@materia/server": "1.1.1",
      "@types/jasmine": "~2.8.6",
      "@types/jasminewd2": "~2.0.3",
      "@types/node": "^12.11.1",
      "codelyzer": "~5.1.2",
      "core-js": "^2.5.4",
      "jasmine-core": "~2.99.1",
      "jasmine-spec-reporter": "~4.2.1",
      "karma": "~4.0.0",
      "karma-chrome-launcher": "~2.2.0",
      "karma-coverage-istanbul-reporter": "~2.0.1",
      "karma-jasmine": "~1.1.2",
      "karma-jasmine-html-reporter": "^0.2.2",
      "ncp": "^2.0.0",
      "ng-packagr": "^9.0.0",
      "protractor": "~5.4.0",
      "rxjs": "6.5.4",
      "ts-node": "~7.0.0",
      "tslint": "^5.16.0",
      "typescript": "~3.7.5",
      "tslib": "^1.9.0",
      "zone.js": "~0.10.2"
    },
    "materia": {
      "addon": "<%= utils.classify(name) %>"
    }
  }
  